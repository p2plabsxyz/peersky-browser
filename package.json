{
  "name": "peersky-browser",
  "version": "1.0.0-beta.13",
  "description": "A minimal local-first p2p web browser: access, communicate, and publish offline.",
  "keywords": [
    "peersky",
    "ipfs",
    "hyper",
    "web3",
    "browser",
    "dweb"
  ],
  "license": "MIT",
  "author": "Akhilesh Thite <akhileshthite@hotmail.com> (https://akhilesh.art/)",
  "main": "src/main.js",
  "type": "module",
  "repository": "https://github.com/p2plabsxyz/peersky-browser",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --publish never",
    "build-all": "electron-builder build -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "buildDependenciesFromSource": true,
    "npmRebuild": true,
    "asar": true,
    "appId": "peersky.p2plabs.xyz",
    "productName": "Peersky Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "node_modules/**/*",
      "package.json",
      "public/*",
      "src/**/*",
      "src/*"
    ],
    "mac": {
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "The current page is asking to use your microphone",
        "NSCameraUsageDescription": "The current page is asking to use your camera",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      },
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "./public/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./public/icon.png"
    },
    "linux": {
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "executableArgs": [
        "--enable-accelerated-video"
      ],
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        "AppImage",
        "apk",
        "pacman"
      ],
      "category": "Network;WebBrowser"
    },
    "protocols": [
      {
        "name": "webpages",
        "schemes": [
          "http",
          "https"
        ],
        "role": "Viewer"
      },
      {
        "name": "ipfs",
        "schemes": [
          "ipfs",
          "ipns",
          "ipld"
        ],
        "role": "Viewer"
      },
      {
        "name": "hyper",
        "schemes": [
          "hyper",
          "dat"
        ],
        "role": "Viewer"
      },
      {
        "name": "web3",
        "schemes": [
          "web3"
        ],
        "role": "Viewer"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "p2plabsxyz",
        "repo": "peersky-browser",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@helia/ipns": "^8.2.3",
    "@helia/unixfs": "^5.0.3",
    "@libp2p/kad-dht": "^15.1.11",
    "b4a": "^1.6.7",
    "blockstore-level": "^2.0.3",
    "chromium-net-errors": "^13.0.0",
    "content-hash": "^2.5.2",
    "content-type": "^1.0.5",
    "datastore-level": "^11.0.3",
    "electron-find": "^1.0.7",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.2.1",
    "ethers": "^6.13.4",
    "fs-extra": "^11.2.0",
    "helia": "^5.4.2",
    "hyper-sdk": "^6.1.0",
    "hypercore-crypto": "^3.6.1",
    "hypercore-fetch": "^10.0.0",
    "hyperdht": "^6.27.0",
    "hyperswarm": "^4.14.0",
    "jquery": "^3.7.1",
    "libp2p": "^2.8.8",
    "mime-types": "^2.1.35",
    "multiformats": "^13.3.2",
    "scoped-fs": "^1.4.1",
    "web3protocol": "^0.6.0"
  },
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0"
  }
}
